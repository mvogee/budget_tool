<div class="popup-container">
    <div id="popupBudgetItemUpdate" class="popupEdit hidePopupEdit form_div">
        <form class="budgetItemUpdate" name="updateBudgetItm" onsubmit="updateBudgetItem(this)">
            <p>Edit budget item</p>
            <input class="categoryInput" type="text" autocomplete="off" name="category" placeholder="category" value="" required>
            <input class="amountInput" type="number" step=".01" name="budgeted" placeholder="100" value="" required>
            <input hidden class="idInput" name="id" value="">
            <button class="submitBtn" type="submit">Save</button>
            <button class="cancelBtn" type="button">Cancel</button>
        </form>
    </div>
</div>