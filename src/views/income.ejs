<%- include("./partials/header.ejs") %>
<%- include("./partials/nav.ejs") %>

<!-- requires a incomes: [{id, incomeName, hourlyRate, taxRate, retirement}], grossIncomeAll, netIncomeAll, utils-->

<h1>Projected Income</h1>
<hr>
<div class="top-stats">
    <p>Gross income: <%= grossIncomeAll %> </p>
    <p>Net income:  <%= netIncomeAll %> </p>
</div>
<hr>
<div class="form_div">
    <form name="newIncomeItm" onsubmit="newIncomeItem(this)">
        <div class="input_div">
            <label for="incomeName">Income Name</label>
            <input name="incomeName" type="text" required autofocus placeholder="income name">
        </div>
        <div class="input_div">
            <label for="hourlyRate">Hourly Rate</label>
            <input name="hourlyRate" type="number" step=".01" required placeholder="hourly Rate">
        </div>
        <div class="input_div">
            <label for="hoursPerWeek">Hrs/Week</label>
            <input name="hoursPerWeek" type="number" step="0.01" required placeholder="40">
        </div>
        <div class="input_div">
            <label for="taxRrate">Tax Rate</label>
            <input name="taxRate" type="number" step=".01" placeholder="tax rate">
        </div>
        <div class="input_div">
            <label for="retirement">retirement</label>
            <input name="retirement" type="number" step=".01" placeholder="retirement %">
        </div>
        <button type="submit">Add</button>
    </form>
</div>
<%- include("./partials/incomePopEdit.ejs") %> 
<table>
    <thead>
        <tr>
            <td>Income Name</td>
            <td>Hourly Rate</td>
            <td>Hr/Week</td>
            <td colspan="2">Tax Rate</td>
            <td colspan="2">Retirement</td>
            <td>Gross income</td>
            <td>Net Income</td>
        </tr>
    </thead>
    <tbody>
        <% incomes.forEach(element => { %>
        <tr>
            <td><%= element.incomeName %></td>
            <td><%= element.hourlyRate %></td>
            <td><%= element.hoursPerWeek %> </td>
            <td ><%= element.taxRate %></td>
            <td><%= utils.getTaxAmount(element) %></td>
            <td><%= element.retirement %></td>
            <td><%= utils.getRetirementAmount(element) %></td>
            <td><%= utils.getMonthlyGrossIncome(element) %> </td>
            <td><%= utils.getMonthlyNetIncome(element) %> </td>
            <td>
                <button class="editButton editButtonIncome" type="button"
                itmId="<%= element.id %>"
                name="<%= element.incomeName %>"
                hourlyRate="<%= element.hourlyRate %>"
                hoursPerWeek="<%= element.hoursPerWeek %>"
                taxRate="<%= element.taxRate %>"
                retirement="<%= element.retirement %>"
                >Edit</button>
            </td>
            <td>
            <form onsubmit="deleteIncomeItem(this)">
                <input name="deleteIncome" value="<%= element.id %>" hidden>
                <button class="deleteBtn" type="submit">Delete</button>
            </form>
        </td>
        </tr>
       <% }); %> 
    </tbody>
</table>

<%- include("./partials/footer.ejs") %>
<script src="./js/forms.js"></script>
<script src="./js/incomeBtns.js"></script>