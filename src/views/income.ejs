<%- include("./partials/header.ejs") %>
<%- include("./partials/nav.ejs") %>

<!-- requires a incomes: [{id, incomeName, hourlyRate, taxRate, tithe, retirement}], grossIncomeAll, netIncomeAll, helpers-->

<h1>Projected Income</h1>

<form action="/projectedIncome" method="POST" name="newBudgetItm">
    <input name="incomeName" type="text" required autofocus placeholder="income name">
    <input name="hourlyRate" type="number" step=".01" required placeholder="hourly Rate">
    <input name="taxRate" type="number" step=".01" placeholder="tax rate">
    <input name="tithe" type="number" step=".01" placeholder="tithe %">
    <input name="retirement" type="number" step=".01" placeholder="retirement %">
    <button type="submit">add</button>
</form>
<div>
    <p>Gross income: <%= grossIncomeAll %> </p>
    <p>Net income:  <%= netIncomeAll %> </p>
</div>
<table>
    <thead>
        <tr>
            <td>Income Name</td>
            <td>Hourly Rate</td>
            <td>Tax Rate</td>
            <td>Tithe</td>
            <td>Retirement</td>
            <td>Gross income</td>
            <td>Net Income</td>
        </tr>
    </thead>
    <tbody>
        <% incomes.forEach(element => { %>
        <tr>
            <td><%= element.incomeName %></td>
            <td><%= element.hourlyRate %></td>
            <td><%= element.taxRate %> | <%= helpers.getTaxAmount(element) %> </td>
            <td><%= element.tithe %> | <%= helpers.getTitheAmount(element) %> </td>
            <td><%= element.retirement %> | <%= helpers.getRetirementAmount(element) %> </td>
            <td><%= helpers.getMonthlyGrossIncome(element) %> </td>
            <td><%= helpers.getMonthlyNetIncome(element) %> </td>
            <td>
            <form action="/deleteIncomeItm" method="POST">
                <input name="deleteIncome" value="<%= element.id %>" hidden>
                <button class="deleteBtn" type="submit">delete</button>
            </form>
        </td>
        </tr>
       <% }); %> 
    </tbody>
</table>

<%- include("./partials/footer.ejs") %> 