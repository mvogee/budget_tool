<!-- gets budgets, itmName, amount, categoryId, date -->
<div class="popupEdit">
    <label for="updateSpendingItem">spending</label>
    <form id="updateSpendingItem" class="updateForm" action="/spendingItemUpdate" method="post">
        <input hidden class="itmId" name="itmId" value="0">
      <input class="editNameInput" type="text" name="itemName" placeholder="name" value="name" required autofocus>
      <input class="editAmountInput" type="number" step="0.01" name="amount" placeholder="amount" value="0" required>
      <select class="editCategoryInput" name="category" form="updateSpendingItem">
        <option value="0">uncategorized</option>

        <% budgets.forEach(element => { %>
          <option value="<%= element.id %>" name="<%= element.category %>" > <%= element.category %> </option> <!-- Make element.category the default-->
        <% }); %>
        <!-- populates based on budget categories -->
      </select>
      <input class="editDateInput" type="date" name="date" value="<%= date %>" min="2010-01-01" max="<%= today %>"> <!-- max should be today -->
      <button type="submit" name="save">save</button> <!-- ! this needs to make an update call to the db-->
      <button type="button" name="cancel" onclick="cancle.js"></button> <!-- !make this close out the popup -->
    </form>

</div>
