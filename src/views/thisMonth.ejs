<%- include("./partials/header.ejs"); %>
<%- include("./partials/nav.ejs"); %>

<!-- select a month -->
<!-- expenses/incomes can be pulled from database based on the month they are for -->
<h1>Month</h1>
<input type="month" name="month" value="2021-07" onchange="submit"><!-- populate the table based on the date here defualt should be today -->
<div class="spending">
  <label for="spendingItem">spending</label>
  <form id="spendingItem" class="" action="/spendingItem" method="post" required>
    <input type="text" name="itemName" placeholder="name" required>
    <input type="number" step="0.01" name="amount" placeholder="ammount" required>
    <select name="category" form="spendingItem">
      <option value="0" default>uncategorized</option>
      <!-- needs to populate a dropdown based on categorys -->
    </select>
    <input type="date" name="date" value="2021-07-24" min="2018-06-07T00:00" max="2018-06-14T00:00"> <!-- max should be today -->
    <button type="submit" name="button">add</button>
  </form>
</div>
<div class="income">
  <label for="incomeItem">Income</label>
  <form id="incomeItem" action="/incomeItem" method="post">
    <input type="text" name="itemName" placeholder="name">
    <input type="number" step="0.01" name="amount" placeholder="amount">
    <input type="date" name="date" value="2021-07-21" min="2020-01-01" max="2021-06-27">
    <button type="submit" name="button">add</button>
  </form>

</div>
